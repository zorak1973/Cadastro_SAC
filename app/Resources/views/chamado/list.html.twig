{% extends 'base.html.twig' %}

{% block body %}
		<div class="jumbotron">
			<div class="container">
				<div class="page-header">
					<h2><span class="glyphicon glyphicon-list"></span>&nbsp;Lista</h2>
					<!--<hr />-->
					<p><strong>Chamados Abertos - SAC </strong></p>
				</div>
			</div>
		</div>
<div class="container">
<table class="table table-hover table-responsive">
<tr>
<th>Núm.Chamado</th>
<th>Título</th>
<th>Observação</th>
<th>{{ knp_pagination_sortable(chamados, 'Pedido', 'c.pedido_id') }}</th>
<th>{{ knp_pagination_sortable(chamados, 'E-mail Cliente', 'cl.email') }}</th>
</tr>		

	
	{% for chm in chamados %}
	<tr>
	<td>{{ chm.id }}</td>
	<td>{{ chm.titulo }}</td>
	<td>{{ chm.observacao }}</td>
	<td>{{ chm.pedido.id }}</td>
	<td>{{ chm.cliente.email }}</td>
	</tr>
	{% endfor %}
</table>	
	
	<div class="navigation text-center">
    {{ knp_pagination_render(chamados) }}
	</div>
</div>
{% endblock %}
